<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.chart.PieActivity">

        <com.xu.kotandroid.view.PieChartView2
            android:id="@+id/pie"
            android:layout_width="0pt"
            android:layout_height="250pt"
            android:background="#ccc"
            app:circleRadius="60pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textSize="14pt" />


        <com.xu.kotandroid.view.ContainsView
            android:id="@+id/container"
            android:layout_width="180pt"
            android:layout_height="150pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pie" />


        <com.xu.kotandroid.view.PorterDuffView
            android:id="@+id/porter"
            android:layout_width="180pt"
            android:layout_height="180pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pie" />

        <com.xu.kotandroid.view.SpiderView
            android:id="@+id/spider"
            android:layout_width="0pt"
            android:layout_height="200pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>